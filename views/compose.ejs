<div class="container" id="abcd" style="margin-top: 5%; border: 5px solid gray; padding: 30px;">
<form action="/delete" method="post">
  <% events.forEach(function(post) { %>
  <h2 style="text-transform: uppercase; color: black;"> <%= post.title %> <input style="margin-left: 1%; margin-top: 1%; zoom: 1.5;" value="<%=post._id%>" onChange="this.form.submit()" type="checkbox" class="form-check-input" name="checkbox"> </span>  </h2>
