<div class="container" id="abcd" style="margin-top: 5%; border: 5px solid gray; padding: 30px;">
<form action="/delete" method="post">
  <% events.forEach(function(post) { %>
  <h2 style="text-transform: uppercase;">  <%= post.title %>  </h2>
  <input type="checkbox" name="checkbox" value="<%=post._id%>" onChange="this.form.submit()">
  <p style="margin-bottom: 5%;">  <%= post.body %> </p>
  <% }); %>
</div>
</form>

<form action="/compose" method="post">
  <input type="text" name="title" placeholder="Title of the event">
  <textarea name="body" rows="8" cols="80" placeholder="About the Event"></textarea>
  <button type="submit" name="button">Submit</button>
</form>

